<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:BibliotekaKsiazek.MVVM.ViewModel"
             x:Class="BibliotekaKsiazek.MVVM.View.MainPage">

    <ContentPage.BindingContext>
        <vm:MainPageViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30, 0"
            Spacing="25">
                <CollectionView ItemsSource="{Binding Books}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="10" Margin="5">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*">
                                    <Label Text="{Binding Title}" FontSize="25" Grid.Row="0" />
                                    <Label Text="{Binding Author}" FontSize="16" Grid.Row="1" />
                                    <Label Text="{Binding Description}" FontSize="14" Grid.Row="2" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
