<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:BibliotekaKsiazek.MVVM.ViewModel"
             xmlns:vm="clr-namespace:BibliotekaKsiazek.MVVM.ViewModel"
             x:Class="BibliotekaKsiazek.MVVM.View.BookDetails">

    <ContentPage.BindingContext>
        <vm:BookDetailsViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30, 0" Spacing="25">
            <Image Source="{Binding SelectedBook.ImagePath}" HeightRequest="300" />
            <Label Text="{Binding SelectedBook.Title}" FontSize="30" />
            <Label Text="{Binding SelectedBook.Author}" FontSize="20" />
            <Label Text="{Binding SelectedBook.Description}" FontSize="16" />
            <Label Text="{Binding SelectedBook.Price, StringFormat='{}{0:C}'}" FontSize="20" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>